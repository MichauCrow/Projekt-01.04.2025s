<Window x:Class="WpfApp1.DodajOsobe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj osobe" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBox x:Name="txtPESEL" Margin="10" Text="PESEL"/>
            <TextBox x:Name="txtName" Margin="10" Text="First Name"/>
            <TextBox x:Name="txtSecName" Margin="10" Text="Second Name"/>
            <TextBox x:Name="txtSurname" Margin="10" Text="Surname"/>
            <Button Content="Dodaj" Click="Ok_Click" Margin="10"/>
            <Button Content="Anuluj" Click="Cancel_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>