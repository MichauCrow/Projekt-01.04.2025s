<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <ListView x:Name="listView" Margin="0,0,0,62">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding m_nID}" Width="50"/>
                    <GridViewColumn Header="Imie" DisplayMemberBinding="{Binding m_strName}" Width="50"/>
                    <GridViewColumn Header="Nazwisko" DisplayMemberBinding="{Binding m_strSname}" Width="70"/>
                    <GridViewColumn Header="PESEL" DisplayMemberBinding="{Binding m_strPESEL}" Width="50"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <Button Content="Dodaj" Margin="736,383,0,0" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Height="27" Width="54"/>

    </Grid>
</Window>
